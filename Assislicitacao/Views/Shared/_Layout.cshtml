@{
    var usuarioNome = Context.Session.GetString("usuarioNome");
    var tipoUsuario = Context.Session.GetString("usuarioTipoUsuario");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assislicitacao</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assislicitacao.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Licitacao" asp-action="ExibirTodasLicitacao" ">
                    <img src="~/Logos/LogoAssislicitacao.png"
                         style="height:30px; width:auto; display:block;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start gap-2">
                    @if (tipoUsuario == "ADMINISTRADOR DE SISTEMA") {
                        <div class="dropdown">
                            <button class="dropdown-toggle bg-transparent border-0 text-dark fw-bold text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuario
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Usuario" asp-action="RegistrarUsuario">Cadastrar Usuario</a>
                                <a class="dropdown-item" asp-controller="Usuario" asp-action="ExibirUsuarios">Todos Usuarios</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="dropdown-toggle bg-transparent border-0 text-dark fw-bold text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Empresa
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Empresa" asp-action="ConsultarCNPJ">Cadastrar Empresa</a>
                                <a class="dropdown-item" asp-controller="Empresa" asp-action="ExibirTodasEmpresas">Todas Empresas</a>
                            </div>
                        </div>
                    } else if (tipoUsuario != "ADMINISTRADOR DE SISTEMA") {
                        <div class="dropdown">
                            <button class="dropdown-toggle bg-transparent border-0 text-dark fw-bold text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Empresa
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Empresa" asp-action="ExibirTodasEmpresas">Todas Empresas</a>
                            </div>
                        </div>
                    }
                    <div class="dropdown">
                        <button class="dropdown-toggle bg-transparent border-0 text-dark fw-bold text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Licitação
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-controller="Licitacao" asp-action="CadastrarLicitacao">Cadastrar Licitação</a>
                            <a class="dropdown-item" asp-controller="Licitacao" asp-action="ExibirTodasLicitacao">Exibir Licitações</a>
                            <a class="dropdown-item" asp-controller="Data" asp-action="InformarDataInicial">Calcular Prazo</a>
                        </div>
                    </div>
                </div>
                <div class="d-flex ms-auto align-items-center">
                    @if (!string.IsNullOrEmpty(usuarioNome)) {
                        <a asp-controller="Usuario" asp-action="MeuPerfil" class="d-flex align-items-center text-decoration-none me-3">

                            @if (Context.Session.GetString("usuarioFoto") != "/FotosPerfil/fotoPerfilPadrao.jpg") {
                                <img src="@Context.Session.GetString("usuarioFoto")"
                                     alt="Foto de perfil"
                                     class="rounded-circle border border-light me-2"
                                     style="width: 40px; height: 40px; object-fit: cover;">
                            }

                            <span class="fw-bold text-dark">Olá, @usuarioNome</span>
                        </a>
                        <a class="btn btn-outline-secondary btn-sm" asp-controller="Login" asp-action="Logout">Sair</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Assislicitacao - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>