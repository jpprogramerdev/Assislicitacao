@{
    ViewData["Title"] = "Gráfico de Licitações";
}

<h2>@ViewData["Title"]</h2>

<canvas id="graficoMeses" width="800" height="400"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('graficoMeses').getContext('2d');

    var grafico = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Meses)),
            datasets: [{
                label: 'Total Ganho por Mês',
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ValoresPorMes)),
                backgroundColor: 'rgba(75, 192, 192, 0.5)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Valor (R$)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Meses'
                    }
                }
            }
        }
    });
</script>
