@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">Assislicitação</h3>

        @if (TempData["ErroLogin"] != null) {
            <div class="alert alert-danger" role="alert">
                @TempData["ErroLogin"]
            </div>
        } else if (TempData["SucessoCadastroLogin"] != null) {
            <div class="alert alert-success" role="alert">
                @TempData["SucessoCadastroLogin"]
            </div>
        }

        <form asp-controller="Login" asp-action="VerificarLogin" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email:</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Digite seu email" />
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label">Senha:</label>
                <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Usuario" asp-action="RegistrarUsuario">Cadastrar como Operador</a><br />
                <a asp-controller="Empresa" asp-action="ConsultarCNPJ">Cadastrar como Empresa (CNPJ)</a><br />
            </div>
        </form>
    </div>
</div>
