@{
    ViewData["Title"] = "Gráfico de Licitações";
}

<canvas id="graficoMeses" width="800" height="400"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('graficoMeses').getContext('2d');

    var grafico = new Chart(ctx, {
        type: 'line',
        data: {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Meses)),
             datasets: [{
                label: 'Total Ganho por Mês',
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ValoresPorMes)),
                backgroundColor: 'transparent',       // sem preenchimento
                borderColor: 'rgba(75, 192, 75, 1)',  // verde chamativo para a linha
                borderWidth: 2,
                fill: false,                           // desativa preenchimento
                tension: 0.2                           // suaviza a linha
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Valor (R$)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Meses'
                    }
                }
            }
        }
    });
</script>
