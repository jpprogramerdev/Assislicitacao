@model Licitacao

@{
    ViewData["Title"] = "Confirmar Licitação";
}

<form asp-controller="Licitacao" asp-action="AtaualizarConfirmacaoLicitacao" method="post">
    <input type="hidden" asp-for="@Model.Id" />

    @for (int i = 0; i < Model.Empresas.Count; i++) {
        <input type="hidden" asp-for="Empresas[@i].EmpresaId" />

        <p class="cont-empresa">Empresa @(i + 1)</p>

        <div class="form-group">
            <label>Razão Social:</label>
            <input type="text" class="form-control" asp-for="Empresas[@i].Empresa.RazaoSocial" readonly>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Empresas[@i].ConfirmacaoParticipacao" />
            <label class="form-check-label">Confirmar participação</label>
        </div>

        <hr />
    }

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>