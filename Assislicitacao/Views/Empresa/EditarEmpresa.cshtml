@model Empresa

@{
    ViewData["Title"] = "Editar Empresa";

    if (TempData["FalhaAtualizacaoEmpresa"] != null) {
        <div class="alert alert-danger" role="alert">
            @TempData["FalhaAtualizacaoEmpresa"]
        </div>
    }
}

<form asp-controller="Empresa" asp-action="AtualizarEmpresa" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.PorteEmpresa.Id" />
    <input type="hidden" asp-for="@Model.Endereco.Id" />
    <input type="hidden" asp-for="@Model.Endereco.Municipio.Id" />
    <input type="hidden" asp-for="@Model.Endereco.Municipio.Estado.Id" />

    <div class="form-group">
        <label for="nome-usuario">Razão Social:</label>
        <input type="text" class="form-control" id="nome-usuario" asp-for="@Model.RazaoSocial" required>
    </div>

    <div class="form-group">
        <label for="email-usuario">CNPJ:</label>
        <input type="text" class="form-control" id="email-usuario" asp-for="@Model.CNPJ" required>
    </div>

    <div class="form-group">
        <label for="email-usuario">PORTE:</label>
        <input type="text8" class="form-control" id="email-usuario" asp-for="@Model.PorteEmpresa.Porte" required>
    </div>

    <div class="form-group">
        <label for="tipo-usuario">Logradouro:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.Logradouro" required>
    </div>

    <div class="form-group">
        <label for="tipo-usuario">Numero:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.Numero" required>
    </div>

    <div class="form-group">
        <label for="tipo-usuario">Bairro:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.Bairro" required>
    </div>

    <div class="form-group">
        <label for="tipo-usuario">Complemento:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.Complemento">
    </div>

    <div class="form-group">
        <label for="tipo-usuario">CEP:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.CEP" required>
    </div>

    <div class="form-group">
        <label for="tipo-usuario">Cidade:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.Municipio.Nome" required>
    </div>

    <div class="form-group">
        <label for="tipo-usuario">UF:</label>
        <input type="text" class="form-control" id="tipo-usuario" asp-for="@Model.Endereco.Municipio.Estado.Uf" required>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>